{
  "env": {
    "es2021": true,
    "node": true,
    "commonjs": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": [2, "always"],
    "max-len": ["error", {"code": 120}],
    "object-curly-spacing": ["error", "never"],
    "@typescript-eslint/no-var-requires": 0,
    "require-jsdoc" : 0
  }
}
