{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "type": "module",
  "scripts": {
    "test": "mocha -r ts-node/register 'tests/**/*.ts'",
    "start": "tsc && node dist/index.js",
    "coverage": "nyc npm run test",
    "test:load": "forever start index.ts && sleep 2s && artillery run ./tests/load-test.yml && forever stop index.ts"
  },
  "pre-push": [
    "test",
    "coverage"
  ],
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^16.0.0",
    "express": "^4.16.4",
    "sqlite": "^4.0.23",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.3.0",
    "typescript": "^4.5.5",
    "validate": "^5.2.0",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "artillery": "^1.6.1",
    "chai": "^4.3.6",
    "eslint": "^8.8.0",
    "eslint-config-google": "^0.14.0",
    "forever": "^4.0.3",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^10.4.0"
  }
}
